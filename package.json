  "bugs": {
    "url": "https://github.com/Sourav-1234/proshop/issues"
  },
  "homepage": "https://github.com/Sourav-1234/proshop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.1"
  }
}
